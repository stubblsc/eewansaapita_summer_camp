<% if is_admin? %>
<div class="col-md-10 offset-1">
<h1>Listing profiles</h1>
<%= link_to 'CSV Download', profiles_path(:format => :csv), :class => "btn btn-xs btn-info" %>
<br>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>Date of birth</th>
      <th>Enrollment #</th>
      <th>Gender</th>
      <th>Email</th>
      <th>User Type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.lastName %></td>
        <td><%= profile.firstName %></td>
        <td><%= profile.dateOfBirth %></td>
        <td><%= profile.enrollNum %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.email %></td>
        <td><%= profile.userType %></td>
        <td><%= link_to 'Show', profile_path(profile.id), :class => "btn btn-xs btn-info" %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile), :class => "btn btn-xs btn-warning" %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path, :class => "btn btn-sm btn-primary" %>
</div>
<% else %>
You are not authorized to view this page
<% end %>